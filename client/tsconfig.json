{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "dom",
            "esnext"
        ],
        "outDir": "./dist/out-tsc",
        "target": "es2016"
    },
    "angularCompilerOptions": {
        "enableIvy": true
    }
}
